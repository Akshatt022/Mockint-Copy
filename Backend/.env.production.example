# Production Environment Variables for Backend

# Database
MONGOURI=mongodb+srv://username:password@cluster.mongodb.net/mockint?retryWrites=true&w=majority

# JWT Secret (use a strong, random secret in production)
JWT_SECRET=your-super-secure-jwt-secret-key-here

# Server Configuration
PORT=5000
NODE_ENV=production

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-domain.onrender.com

# Optional: Additional security configurations
SESSION_SECRET=your-session-secret-here

# Database Configuration
DB_NAME=mockint
DB_CONNECTION_TIMEOUT=30000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=20

# Logging
LOG_LEVEL=info

# API Configuration
API_VERSION=v1
MAX_REQUEST_SIZE=10mb